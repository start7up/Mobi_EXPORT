{
  "name": "madi-electronics-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=client\" \"npm run dev --workspace=server\"",
    "install": "npm install --workspaces --if-present",
    "build": "npm run build --workspace=client",
    "start": "npm start --workspace=server",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}